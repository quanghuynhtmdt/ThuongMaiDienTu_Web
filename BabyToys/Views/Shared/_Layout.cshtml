<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/CSS/style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page">
        <div class="header">
            <div class="logo">
                <img src="~/Content/Images/logo.png" />
            </div>
            <div class="search">
                <div class="search-box">
                    <input type="text" class="search-input" placeholder="Nhập tên sản phẩm"/>
				    <input type="submit" class="search-button"/>
                </div>
                <div class="cart-box">
                   <a href=#>
                       <img src="~/Content/Images/cart.png" />
				       <div class="cart-text">Giỏ hàng </div>
                   </a>
                </div>
            </div>
        </div>
   
     <div class="navigation">
        <div class="navigation-left"></div>
        <div class="navigation-right"></div>
    </div>

     <div class="content">  @RenderBody()    </div>

   <div class="clear"></div>
   <div class="footer"></div>
  </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>